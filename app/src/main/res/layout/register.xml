<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-Tech Servies"
        android:textSize="30dp"
        android:fontFamily="@font/bereg"
        android:textColor="#000000"
        android:layout_marginBottom="40dp"
        android:id="@+id/txt_judul"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="sign up to start
        shopping"
        android:textColor="#EE5A5A"
        android:fontFamily="@font/opeita"
        android:layout_marginBottom="40dp"/>

    <EditText
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:id="@+id/edt_email"
        android:layout_marginBottom="10dp"
        android:textColor="#EE5A5A"
        android:hint=" example@tech.com"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_email_24" />

    <EditText
        android:id="@+id/edt_name"
        android:layout_marginBottom="10dp"
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:textColor="#EE5A5A"
        android:drawableLeft="@drawable/ic_baseline_person_25"
        android:hint=" name"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edt_number"
        android:textColor="#EE5A5A"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/ic_baseline_phone_24"
        android:hint=" +62 98829301902" />

    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/edt_pass"
        android:hint=" password"
        android:inputType="textPassword"
        android:layout_marginBottom="10dp"
        android:textColor="#EE5A5A"
        android:drawableLeft="@drawable/ic_baseline_lock_25"/>

    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/edt_rtpass"
        android:hint=" retype password"
        android:inputType="textPassword"
        android:layout_gravity="center"
        android:textColor="#EE5A5A"
        android:layout_marginBottom="40dp"
        android:drawableLeft="@drawable/ic_baseline_lock_25"/>

    <Button
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_regist"
        android:text="Register"
        android:background="@drawable/custom1"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"/>





</LinearLayout>